<h1>
  <%= @cocktail.name %>
</h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %></li>
  <% end %>
</ul>


<%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to 'Back', cocktails_path %>
<br>
<%= link_to 'Delete', dose_path(@cocktail), method: :delete,
      data: { confirm: "Are you sure?" } %>
